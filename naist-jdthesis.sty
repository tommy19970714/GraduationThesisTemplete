\def\@evenfoot{{\draftfoot}}%
}

%
% title page
%
%\typeout{titlepage}
\renewcommand{\titlepage}{
        \newpage
        \thispagestyle{empty}
        \if\isfinal\yes
                \vspace*{20mm}
                \begin{center}
                        \Large\bf\titlestr
                \end{center}
                \vspace*{18mm}
                \begin{center}
                        \Large\authorstr
                \end{center}
                \vspace*{23mm}
                \begin{center}
                        \Large 博士\,(\jmajorstr)
                \end{center}
                \vspace*{10mm}
                \begin{center}
                        総合研究大学院大学 \\
                        複合科学研究科 \\
                        {\jdepartmentstr}専攻
                \end{center}
                \vspace*{4.5mm}
                \begin{center}
                        \subyearstr
                \end{center}
                \vspace*{4.5mm}
                \begin{center}
                        \pubdatestr
                \end{center}
                \vspace*{\fill}
        \else
                \vspace*{\fill}
                \begin{center}
                        {\Huge\bf DRAFT}
                \end{center}
                \vspace*{1cm}
                \begin{center}
                        \Large\bf\titlestr
                \end{center}
                \vspace*{1cm}
                \begin{center}
                        {\Large \authorstr}
                \end{center}
                \vspace*{1cm}
                \begin{center}
                        {\Large\bf \today}
                \end{center}
                \begin{center}
                        {\Large\bf \curtime}
                \end{center}
                \vspace*{\fill}
        \fi
}

